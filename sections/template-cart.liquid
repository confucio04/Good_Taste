
<!-- sections/template-cart.liquid -->
<div id="cartProductContainer">
    <!-- Contenido del producto se insertará mediante JavaScript -->
</div>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        var addedProduct = localStorage.getItem("addedProduct");

        if (addedProduct) {
            addedProduct = JSON.parse(addedProduct);

            var cartProductContainer = document.getElementById("cartProductContainer");

            if (cartProductContainer) {
                cartProductContainer.innerHTML = `
                    <figure>
                        <img src="${addedProduct.image}" alt="${addedProduct.title}" />
                        <figcaption>
                            <h2>${addedProduct.title}</h2>
                            <p>${addedProduct.description}</p>
                            <p>Price: $${addedProduct.price}</p>
                            <form action="/cart/update" method="post" id="updateForm">
                                <input type="hidden" name="id" value="${addedProduct.id}">
                                <label for="quantity">Quantity:</label>
                                <input type="number" name="quantity" id="quantity" value="${addedProduct.quantity}" min="1">
                                <button type="submit">Update</button>
                            </form>
                            <a href="/cart/clear" id="clearCart">Clear Cart</a>
                        </figcaption>
                    </figure>
                `;

                // Manejo de eventos del formulario
                var updateForm = document.getElementById("updateForm");
                updateForm.addEventListener("submit", function (event) {
                    // Lógica para manejar la actualización del carrito
                    event.preventDefault();
                    // Puedes agregar lógica adicional aquí, como enviar la actualización mediante AJAX.
                });

                // Manejo de eventos para limpiar el carrito
                var clearCartLink = document.getElementById("clearCart");
                clearCartLink.addEventListener("click", function () {
                    // Lógica para manejar la limpieza del carrito
                    // Puedes agregar lógica adicional aquí, como confirmación antes de limpiar el carrito.
                });
            }

            // Limpia la información del producto almacenada en localStorage después de mostrarla
            localStorage.removeItem("addedProduct");
        }
    });
</script>



{% schema %}
{
    "name": "Template Cart",
    "blocks": [
        {
            "type": "subtotal",
            "name": "Subtotal",
            "limit": 1
        },
        {
            "type": "update_button",
            "name": "Update Button",
            "limit": 1
        },
        {
            "type": "checkout_button",
            "name": "Checkout Button",
            "limit": 1
        }
    ]
}
{% endschema %}
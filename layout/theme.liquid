<!doctype html>
    <html>
      <head>
    <title>{{ page_title }}</title>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="{{ page_description | escape }}">
        <link rel="canonical" href="{{ canonical_url }}">
        <title>{{ page_title }}</title>
        {{ content_for_header }}
        {{ 'tailwind.css' | asset_url | stylesheet_tag }}
        <script src="{{ 'alpine.min.js' | asset_url }}" defer></script>
        <script src={{"https://code.jquery.com/jquery-3.6.4.min.js" }} defer></script>

      </head>
      <body>
    
      {% section  'header' %}  
        <main role="main">
          {{ content_for_layout }}
        </main>
        <script>
          $(document).ready(function() {
              $('.card-info').click(function() {
                  const paragraph = $(this).find('p');
                  const realHeight = paragraph.prop('scrollHeight') + 'px';
                  paragraph.css('max-height', paragraph.css('max-height') ? '' : realHeight);
              });
          });
      </body>
    </html>
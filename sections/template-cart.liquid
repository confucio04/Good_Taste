<div class="cart-container">
    {% for item in cart.items %}
      <div class="cart-item">
        <img src="{{ item.image | image_url: width: 300 }}"
             alt="{{ item.title }}"
             loading="eager"
             width="300"
             height="auto"
            >
        <h2>{{ item.title }}</h2>
        <p>Price: ${{ item.price | money }}</p>
        <p>Quantity: {{ item.quantity }}</p>
      </div>
    {% endfor %}
  </div>
  
  </div>
  

{% schema %}
{
    "name": "Template Cart",
    "blocks": [
        {
            "type": "subtotal",
            "name": "Subtotal",
            "limit": 1
        },
        {
            "type": "update_button",
            "name": "Update Button",
            "limit": 1
        },
        {
            "type": "checkout_button",
            "name": "Checkout Button",
            "limit": 1
        }
    ]
}
{% endschema %}
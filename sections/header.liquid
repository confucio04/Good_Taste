<div class="center-menu" x-data="{ mobileMenuOpen: false }">
    <div class="title">
        <div class="mobile-menu">
            <button x-on:click="mobileMenuOpen = !mobileMenuOpen" type="button" class="link-menu btn">
                <span x-show="!mobileMenuOpen">{% render 'icon-menu' %}</span>
                <span x-show="mobileMenuOpen">{% render 'icon-close' %}</span>
            </button>
        </div>  
        <h1>{{ shop.name }}</h1>  
    </div> 
        
    <div class="mobile-icons">
        <a href="{{ routes.search_url }}">
            {% render 'icon-search' %}
            <span class="icon-text"></span>
        </a>
        <a href="{{ routes.cart_url }}" >
            {% render 'icon-shopping-bag' %}
            <span class="icon-text"></span>
        </a>
    </div>

    <!-- Menú desplegable del código 1 integrado en el código 2 -->
    <nav class="navigation" :class="{ 'show': mobileMenuOpen }" @click.away="mobileMenuOpen = false">
        <div class="relative" x-data="{ accountDropdown: false }">
            <div x-show="accountDropdown">
                <!-- Contenido del menú desplegable de la cuenta (puedes personalizar según tus necesidades) -->
                <a href="{{ routes.account_url }}">Account</a>
                {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
            </div>
        </div>

        {% liquid 
            if section.settings.menu.links == blank 
                assign main_menu_linklist = linklists[section.settings.menu].links 
            else 
                assign main_menu_linklist = section.settings.menu.links 
            endif 
        %}
        {% for link in main_menu_linklist %}
            {% if link.links != blank %}
                <div class="relative" x-data="{ {{ link.handle | replace: '-', '_' }}: false }">
                    <button x-on:click="{{ link.handle | replace: '-', '_' }} = !{{ link.handle | replace: '-', '_' }}" class="arrow">
                        {{ link.title }}
                        {% render 'icon-dropdown' %}
                    </button>
                    <div x-show="{{ link.handle | replace: '-', '_' }}">
                        <!-- Contenido del menú desplegable (puedes personalizar según tus necesidades) -->
                        {% for childlink in link.links %}
                            <a href="{{ childlink.url }}" class="link-child">
                                <div class="ml-4">
                                    <p class="link-child">
                                        {{ childlink.title }}
                                    </p>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                </div>
            {% else %}
                <a href="{{ link.url }}" class="link-child">{{ link.title }}</a>
            {% endif %}
        {% endfor %}
    </nav>

    <div class="platform desktop-icons">
        <!-- Iconos para pantallas grandes -->
        <a href="{{ routes.search_url }}">
            {% render 'icon-search' %}
            <span class="icon-text"></span>
        </a>
        <a href="{{ routes.login_url }}" > 
            {% render 'icon-user' %}
            <span class="icon-text"></span>
        </a>
        <a href="{{ routes.cart_url }}" >
            {% render 'icon-shopping-bag' %}
            <span class="icon-text"></span>
        </a>

        {% if shop.customer_accounts_enabled %}
            {% if customer %}
                <a href="{{ routes.account_url }}" >account</a>
                {{ 'Log out' | customer_logout_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
            {% else %}
                {{ 'Log in ' | customer_login_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
                {{ 'Register' | customer_register_link | replace: '<a', '<a class="text-base text-gray-500 hover:text-gray-900"' }}
            {% endif %}
        {% endif %}
    </div>
</div>

 
    
{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "text",
      "id": "mobile_menu_title",
      "default": "Menu",
      "label": "Mobile Menu Title"
    },
    {
      "type": "link_list",
      "id": "menu",
      "default": "main-menu",
      "label": "Heading Navigation Menu"
    }
  ]
}
{% endschema %}

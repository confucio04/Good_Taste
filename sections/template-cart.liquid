<!-- template-cart.liquid -->

<section class="template-cart">
    <div class="center-cart">
      <h2>Your Shopping Cart</h2>
  
      <!-- Itera sobre los productos en el carrito -->
      {% for item in cart.items %}
        <div class="cart-item">
          <div class="cart-item-img">
            <img src="{{ item.product.featured_image | image_url: width: 300 }}
                " 
                alt="{{ item.title }}" 
                width="300"
                height="150"
                loading="eager" 
            />

          </div>
          <div class="cart-item-info">
            <h4>{{ item.title }}</h4>
            <p>{{ item.variant.title }}</p>
            <p>Quantity: {{ item.quantity }}</p>
            <p>Price: {{ item.price | money }}</p>
          </div>
        </div>
      {% endfor %}
  
      <div class="cart-total">
        <h3>Total: {{ cart.total_price | money }}</h3>
      </div>
  
      <button class="checkout-button">Proceed to Checkout</button>
    </div>
  </section>
  
  <style>
    /* Estilos para la Secci√≥n del Carrito */
    .template-cart {
        padding-top: 12%;
    }
  
    .center-cart {
      max-width: 800px;
      margin: 0 auto;
    }
  
    .cart-item {
      display: flex;
      border: 1px solid #ddd;
      margin-bottom: 10px;
      padding: 10px;
    }
  
    .cart-item-img img {
      width: 80px;
      height: auto;
      margin-right: 10px;
    }
  
    .cart-item-info {
      flex: 1;
    }
  
    .cart-total {
      margin-top: 20px;
      text-align: right;
    }
  
    .checkout-button {
      background-color: #4caf50;
      color: white;
      border: none;
      padding: 10px;
      text-align: center;
      text-decoration: none;
      display: inline-block;
      font-size: 16px;
      margin: 10px 0;
      cursor: pointer;
    }
  </style>

{% schema %}
{
    "name": "Template Cart",
    "blocks": [
        {
            "type": "subtotal",
            "name": "Subtotal",
            "limit": 1
        },
        {
            "type": "update_button",
            "name": "Update Button",
            "limit": 1
        },
        {
            "type": "checkout_button",
            "name": "Checkout Button",
            "limit": 1
        }
    ]
}
{% endschema %}